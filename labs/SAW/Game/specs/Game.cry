module Game where

initByteSequence : {numBytes}
                   (fin numBytes, numBytes >= 1, 8 >= width numBytes)
                   => [8] -> [numBytes][8]
initByteSequence val = [(i*0 + val) | i <- [1..numBytes]]

levelUp : [32] -> [32]
levelUp level = level + 1

resolveAttack : [32] -> [32] -> [32] -> [32]
resolveAttack hp def atk = hp'
  where
    hp' = hp - (atk - def)
